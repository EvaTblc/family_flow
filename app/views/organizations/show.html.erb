      <div class="pixel-corners pixel-cards">
        <h4><%= @organization.name %></h4>
      </div>
      <div class="infos-organization">

        <div class="infos" data-controller="toggle">

          <div>
            <button data-toggle-target="button" data-action="click->toggle#toggle">
              <i class="fa-solid fa-users" style="color: #b044f8; margin-right: 10px;"></i><%= @organization.users.count %>
            </button>
            <%= render 'member_list' %>
          </div>
          <div><i class="fa-solid fa-square-check" style="color: #b044f8; margin-right: 10px;"></i> <%= @organization.tasks.count %></div>
        </div>
      </div>
    </div>

