  <% end %>


<p>Les membres de la Famille</p>
<% @usersorgs.each do |userorg| %>
  <% member = User.find(userorg.user.id) %>
  <%= member.first_name %> <%= member.last_name %> / <%= member.username %> <%= link_to "Delete", user_org_path(userorg), data: {turbo_method: :delete, turbo_confirm: "Êtes vous sûr de vouloir retirer ce membre de la famille ?"} %>
<% end %>


<p>Liste des tâches</p>
<% @tasks.each do |task| %>
