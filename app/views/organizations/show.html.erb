<%= link_to "Home", root_path %> <br>
<%= link_to "Supprimer cette organisation", organization_path(@organization), data: {turbo_method: :delete, turbo_confirm: "Êtes vous sûr de vouloir supprimer cette organisation ?"} %> <br>

  <%= simple_form_for [@organization, @uo] do |f| %>
      <%= f.input :user, collection: @username, label: "Ajouter un nouveau membre" %>
