<div class="top_page-pixl">

  <div class="welcome" data-controller="typed"
    data-typed-address-value=<%= current_user.organization.address.split(",").last %>
    data-typed-temp-value=<%= current_user.organization.meteo[:temp].round(0) %>
    data-typed-icon-value=<%= current_user.organization.meteo[:icon] %>>

    <div class="user-welcome">

        <% if current_user.avatar.attached? %>
          <%= cl_image_tag current_user.avatar.key, class: "avatar" %>
        <% else %>
          <%= image_tag "icon_cat", class: "avatar" %>
        <% end %>

      <h2 >Bonjour <br> <%= current_user.username %></h2>
      <%= link_to edit_user_registration_path, class: "link_edit" do %>
        <i class="fa-regular fa-pen-to-square"></i>
      <% end %>
    </div>

    <div class="icon-meteo" data-typed-target="iconMeteo"></div>

    <div class="localization_user">
      <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
      <p class="element"></p>
    </div>

  </div>
</div>
